@{
    ViewData["Title"] = "Mi primera vista";
    string autor = "Escriba su nombre";
    int edad = 30;
}

<html
    <head>
        <title>@ViewBag. Title</title>
    </head>
    <body>
        <div>
            <h1>Modificando una vista</h1>
            <p>
                <strong>Autor:</strong> @autor <br /> Mi edad es <input type="number" value="@edad" placeholder="Escriba su edad"/> años.
            </p>
        </div>
        <div>
            <label>Mi carne es: </label>
            <input type="number" placeholder="Escriba su carne"/>
        </div>
    </body>